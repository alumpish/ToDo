@model ToDoTask

<div>
    <dl class="row">
        <dt class="col-sm-2">Task ID:</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Date:</dt>
        <dd class="col-sm-10">@Model.Date</dd>

        <dt class="col-sm-2">Is Completed:</dt>
        <dd class="col-sm-10">@Model.IsCompleted</dd>

        <dt class="col-sm-2">Is Important:</dt>
        <dd class="col-sm-10">@Model.IsImportant</dd>

        <dt class="col-sm-2">Is Deleted:</dt>
        <dd class="col-sm-10">@Model.IsDeleted</dd>

        <dt class="col-sm-2">User ID:</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
    </dl>
</div>